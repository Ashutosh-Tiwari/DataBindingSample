<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.ashutoshtiwari.databindingsample.model.TemperatureData" />

        <import type="com.example.ashutoshtiwari.databindingsample.presenter.MainActivityConract.Presenter" />

        <variable
            name="temperatureData"
            type="TemperatureData" />

        <variable
            name="presenter"
            type="Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ashutoshtiwari.databindingsample.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{temperatureData.location}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{temperatureData.celsius}" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:text="@={temperatureData.celsius}" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> presenter.onShowData(temperatureData)}"
            android:text="@string/button_show_data" />

        <Button
            android:text="@string/button_items_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> presenter.showList()}"/>
    </LinearLayout>
</layout>