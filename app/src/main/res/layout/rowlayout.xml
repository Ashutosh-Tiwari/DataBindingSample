<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.ashutoshtiwari.databindingsample.model.TemperatureData" />

        <variable
            name="temperatureData"
            type="TemperatureData" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dp">

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:contentDescription="@string/imageview_content_description"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textview_firstline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toEndOf="@id/imageview_icon"
            android:layout_toRightOf="@id/imageview_icon"
            android:gravity="center_vertical"
            android:text="@{temperatureData.celsius}"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_secondline"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_below="@id/textview_firstline"
            android:layout_toEndOf="@id/imageview_icon"
            android:layout_toRightOf="@id/imageview_icon"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="@{temperatureData.location}"
            android:textSize="12sp" />

    </RelativeLayout>
</layout>
